{% extends "layout.html.twig" %} {% block content %}
    <section class="container py-5 my-5">
        {% if session.id !=0 %}
            <a href="/article/add" class="btn btn-link text-decoration-none mb-5 fw-bold"
            >Ajouter un article</a
            >
        {% endif %}
        <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-3 gx-3 gy-5">
            {% for article in articles %}
                <div>
                    <div class="card card-height shadow">
                        {% if article.img is not null %}
                            <img
                                    src="{{ baseUrl }}/images/{{ article.img }}"
                                    class="card-img-top img-height"
                                    alt="blog image"
                            />
                        {% else %}
                            <img
                                    src="{{ baseUrl }}/images/empty.png"
                                    class="card-img-top img-height"
                                    alt="blog image"
                            />
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title mt-2">{{ article.title }}</h5>
                            <p class="card-text">{{ article.subtitle }}</p>
                            <a href="/article/show/{{ article.id }}" class="btn btn-primary"
                            >En savoir plus</a
                            >
                            <span class="ms-5 fw-bold">{{ article.published_at| date("d/m/Y") }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
