{% extends "layout.html.twig" %} {% block content %}

    <section class="container d-flex flex-column align-items-center">
        <h3 class="my-5">Connecter</h3>
        <form
                method="post"
                class="col-12 col-md-10 col-lg-8 col-xl-6 needs-validation"
                novalidate
        >
            {% if errors.message is defined %}
                <p class="text-danger">{{ errors.message }}</p>
            {% endif %}

            <input type="hidden" name="csrfToken" value="{{ session.csrfToken }}"/>

            <div class="form-floating mb-3">
                <input
                        type="email"
                        name="email"
                        class="form-control"
                        id="floatingInput"
                        placeholder="name@example.com"
                        required
                />
                <label for="floatingInput">Adresse Ã©mail</label>
                <div class="invalid-feedback">Ce champ est requis</div>
            </div>
            {% if errors.email is defined %}
                <p class="text-danger">{{ errors.email }}</p>
            {% endif %}
            <div class="form-floating mb-3">
                <input
                        type="password"
                        name="password"
                        class="form-control"
                        id="password"
                        placeholder="Password"
                        required
                />
                <label for="floatingPassword">Mot de passe</label>
                <div class="invalid-feedback">Ce champ est requis</div>
            </div>
            {% if errors.password is defined %}
                <p class="text-danger">{{ errors.password }}</p>
            {% endif %}

            <div class="form-group">
                <input
                        type="submit"
                        class="btn btn-primary col-12 col-sm-4"
                        value="Connecter"
                />
            </div>
        </form>
        <a href="/register/add-member" class="btn btn-link text-decoration-none mt-5"
        >Vous n'avez pas encore un compte</a
        >
    </section>

{% endblock %}
