{% extends "layout.html.twig" %} {% block header %} {% endblock %} {% block content %}

    <section
            id="contact"
            class="container my-5 py-5 d-flex flex-column justify-content-center align-items-center"
    >
        <h3 class="text-center mb-5">Contactez nous !</h3>
        <form
                class="col-12 col-md-10 col-lg-6 needs-validation"
                method="post"
                novalidate
        >
            <input type="hidden" name="csrfToken" value="{{ session.csrfToken }}"/>

            <div class="form-floating mb-3">
                <input
                        type="text"
                        class="form-control"
                        id="name"
                        name="name"
                        placeholder="Nom"
                        required
                />
                <label for="floatingInput">Nom - Prénom</label>
                <div class="invalid-feedback">Ce champ est requis</div>
            </div>
            {% if errors.name is defined %}
                <div class="text-danger">{{ errors.name }}</div>
            {% endif %}
            <div class="form-floating mb-3">
                <input
                        type="email"
                        class="form-control"
                        name="email"
                        id="floatingInput"
                        placeholder="name@example.com"
                        required
                />
                <label for="floatingInput">Adresse émail</label>
                <div class="invalid-feedback">Ce champ est requis ou émail invalid</div>
            </div>
            {% if errors.email is defined %}
                <div class="text-danger">{{ errors.email }}</div>
            {% endif %}
            <div class="form-floating mb-3">
                <input
                        type="text"
                        class="form-control"
                        name="subject"
                        id="floatingInput"
                        placeholder="Sujet"
                        required
                />
                <label for="floatingInput">Sujet</label>
                <div class="invalid-feedback">Ce champ est requis</div>
            </div>

            {% if errors.subject is defined %}
                <div class="text-danger">{{ errors.subject }}</div>
            {% endif %}
            <div class="form-floating">
      <textarea
              class="form-control"
              name="content"
              placeholder="Message"
              id="floatingTextarea2"
              style="height: 180px"
              required
      ></textarea>
                <label for="floatingTextarea2">Message</label>
                <div class="invalid-feedback">Ce champ est requis</div>
            </div>

            {% if errors.content is defined %}
                <div class="text-danger">{{ errors.content }}</div>
            {% endif %}
            <div class="form-group mt-3">
                <input
                        type="submit"
                        class="btn btn-primary px-5 col-12 col-md-4"
                        value="Envoyer"
                />
            </div>
        </form>
    </section>

    <script src="{{ baseUrl }}/js/script.js"></script>

{% endblock %}
